<Window x:Class="SimpleBezierCurveApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleBezierCurveApp"
        mc:Ignorable="d"
        Title="Bezier curve app" Height="500" Width="400">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="400*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Height="400" Width="400" Background="Black" Name="canvas" MouseLeftButtonDown="canvas_MouseLeftButtonDown" >

        </Canvas>
        <Button Grid.Row="1" Content="Clear" FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="Button_Click" ></Button>
    </Grid>
</Window>
